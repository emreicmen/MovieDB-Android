<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@+id/backgroundView"
        android:layout_width="110dp"
        android:layout_height="250dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/dark_grey">
    </View>
    <ImageView
        android:id="@+id/seasonsImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:background="@color/dark_grey"
        android:textColor="@color/white"
        android:id="@+id/seasonNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Season Name"
        app:layout_constraintStart_toStartOf="@+id/seasonsImage"
        app:layout_constraintEnd_toEndOf="@+id/seasonsImage"
        android:textStyle="bold"
        android:textSize="9sp"
        app:layout_constraintBottom_toBottomOf="@+id/seasonsImage"/>

    <TextView
        android:textColor="@color/white"
        android:id="@+id/episodeCountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Episode Count"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="7sp"
        app:layout_constraintTop_toBottomOf="@+id/airDateText"/>

    <TextView
        android:id="@+id/airDateText"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Air Date"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="7sp"
        app:layout_constraintTop_toBottomOf="@+id/seasonsImage"/>

    <TextView
        android:id="@+id/seasonOverviewText"
        android:textColor="@color/white"
        android:layout_width="75dp"
        android:layout_height="100dp"
        android:text="Seasons Overview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/backgroundView"
        app:layout_constraintTop_toBottomOf="@id/episodeCountText"
        android:textSize="10sp"
        android:gravity="center" />

</androidx.constraintlayout.widget.ConstraintLayout>